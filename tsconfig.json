{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "./",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.d.ts"
    ]
}
